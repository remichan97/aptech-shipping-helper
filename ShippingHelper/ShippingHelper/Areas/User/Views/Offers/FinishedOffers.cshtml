@model IEnumerable<ShippingHelper.Core.Models.Offers>

@{
    ViewData["Title"] = "Finished Offers";
}

<h1>Finished Offers</h1>

<p>Showing finished offers only</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Delivery to
            </th>
            <th>
                Offer Price
            </th>
            <th>
                Date Posted
            </th>
            <th>
                Completed Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompletedDate)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
