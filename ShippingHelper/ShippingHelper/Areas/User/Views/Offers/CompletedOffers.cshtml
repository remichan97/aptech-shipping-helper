@using ShippingHelper.Common.Extensions;
@model IEnumerable<ShippingHelper.Core.Models.Offers>

@{
    ViewData["Title"] = "Completed Offers";
}

<h1>Completed</h1>

<p>Showing only completed offers</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Start from
            </th>
            <th>
                Delivery to
            </th>
            <th>
                Offer Price
            </th>
            <th>
                Date Posted
            </th>
            <th>
                Completed on
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @item.PostedDate.FriendlyDateTime()
                </td>
                <td>
                    @item.CompletedDate.Value.FriendlyDateTime()
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
