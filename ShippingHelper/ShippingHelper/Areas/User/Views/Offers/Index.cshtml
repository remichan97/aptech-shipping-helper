@model IEnumerable<ShippingHelper.Core.Models.Offers>

@{
    ViewData["Title"] = "Available Offers";
}

@if(TempData["profile"] is not null)
{
    <div class"alert alert-success">
        @TempData["profile"]
    </div>
}

<h3>@ViewData["Title"]</h3>

<p>Showing all available offers</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Start From
            </th>
            <th>
                Deliver to
            </th>
            <th>
                Offer Price
            </th>
            <th>
                Posted On
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Posted By
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndAddress)
                </td>
                <td>
                    @item.Price VND
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @(item.Users.FirstName + item.Users.LastName)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
