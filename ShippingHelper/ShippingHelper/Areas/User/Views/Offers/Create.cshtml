@model ShippingHelper.ViewModels.ShippingOfferForm

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Offers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StartAddress" class="control-label"></label>
                <input asp-for="StartAddress" class="form-control" />
                <span asp-validation-for="StartAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndAddress" class="control-label"></label>
                <input asp-for="EndAddress" class="form-control" />
                <span asp-validation-for="EndAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-dark">Back to List</a>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
